<Column ColumnSize="ColumnSize.Is12">
    <Card Height="Height.Px(600)">
        <CardHeader>
            <CardTitle>Catalogos </CardTitle>
        </CardHeader>
        <CardBody>
            <Tabs SelectedTab="@selectedTab" SelectedTabChanged="@OnSelectedTabChanged" TabPosition="TabPosition.Top">
                <Items>
                    <Tab Name="TipoPartido">Tipo Partido</Tab>
                    <Tab Name="TipoSancion">Tipo Sanción</Tab>
                    <Tab Name="PosicionJugador">Posiciones Jugador</Tab>
                    <Tab Name="FasesTorneo">Fase de Torneo</Tab>
                    <Tab Name="Torneo">Torneo</Tab>
                </Items>
                <Content>

                    <TabPanel Name="TipoPartido" Height="Height.Is100">
                        <GridCatalogosComponent ListaTiposSancion="@ListaTiposSancion" />
                    </TabPanel>
                    <TabPanel Name="TipoSancion" Height="Height.Is100">
                        <GridCatalogosComponent ListaTiposPartidos="@ListaTiposPartidos" />
                    </TabPanel>
                    <TabPanel Name="PosicionJugador" Height="Height.Is100">
                        <GridCatalogosComponent ListaPosicionesJugadors="@ListaposicionesJugadors" />
                    </TabPanel>
                    <TabPanel Name="FasesTorneo" Height="Height.Is100">
                        <GridCatalogosComponent ListaFasesTorneoDTO="@ListaFaseTorneo" />
                    </TabPanel>
                    <TabPanel Name="Torneo" Height="Height.Is100">
                        <GridCatalogosComponent ListaTorneo="@ListaTorneo" />
                    </TabPanel>
                    
                </Content>
            </Tabs>
        </CardBody>
    </Card>
</Column>