@if (ListaTiposSancion.Count() > 0)
{

    <DataGrid TItem="TiposSancion"
              Data="@ListaTiposSancion"
              @bind-SelectedRow="@TiposSancionSelected"
              Responsive>
        <DataGridCommandColumn />
        <DataGridColumn Field="@nameof(TiposSancion.IdTipoSancion)" Caption="Id" Sortable="false" />
        <DataGridColumn Field="@nameof(TiposSancion.Descripcion)" Caption="Descripcion" Editable />
        <DataGridColumn Field="@nameof(TiposSancion.Nombre)" Caption="Nombre" Editable />
        <DataGridColumn Field="@nameof(TiposSancion.Puntos)" Caption="Puntos" Editable />
        <DataGridColumn Field="@nameof(TiposSancion.PuntosSuspension)" Caption="PuntosSuspension" Editable />

    </DataGrid>
}

