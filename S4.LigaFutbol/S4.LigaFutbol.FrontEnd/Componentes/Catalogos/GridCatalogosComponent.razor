@if (ListaTorneo.Count() > 0)
{

    <DataGrid TItem="Torneos"
              Data="@ListaTorneo"
              @bind-SelectedRow="@TorneosSelected"
              Responsive
              Virtualize
              VirtualizeOptions="@virtualizeOptions">

        <DataGridColumns>
            <DataGridColumn Field="@nameof(Torneos.Nombre)" Caption="Torneo" Editable />
            <DataGridColumn Field="@nameof(Torneos.FechaIncio)" DisplayFormat="{0:dd/MM/yyyy}" Caption="Fecha Inicio" Editable />
            <DataGridColumn Field="@nameof(Torneos.FechaFin)" DisplayFormat="{0:dd/MM/yyyy}" Caption="Fecha Fin" Editable />
            <DataGridColumn Field="@nameof(Torneos.Habilitado)" DisplayFormat="" Caption="Activo" Editable>
                <DisplayTemplate>
                    @((bool)context.Habilitado
                                    ? "Si"
                                    : "No" )

            </DisplayTemplate>
        </DataGridColumn>

        </DataGridColumns>
    </DataGrid>
}
